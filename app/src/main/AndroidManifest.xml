<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bottomnavigationandnavigationdrawer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BottomNavigationAndNavigationDrawer">
        <activity
            android:name=".ButtonActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrawerActivity"
            android:exported="true"
            android:theme="@style/Theme.BottomNavigationAndNavigationDrawer.NoActionBar">

        </activity>
        <activity
            android:name=".NavigationDrawerActivity"
            android:exported="true"></activity>
        <activity
            android:name=".NewsActivity"
            android:exported="false" />
        <activity
            android:name=".BottomNavigation"
            android:exported="true"></activity>
    </application>

</manifest>